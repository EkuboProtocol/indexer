{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "declarationMap": false,
    "outDir": "dist",
    "rootDir": ".",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["tests", "dist", "node_modules"]
}
